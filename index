        // =============================================================
        // L√ìGICA DO DASHBOARD
        // =============================================================
        
        let chartStatus = null;
        let chartResponsavel = null;

        function aplicarFiltro() {
            const diretoria = document.getElementById('filtroDiretoria').value;
            const select = document.getElementById('filtroDiretoria');
            const label = select.options[select.selectedIndex].text;
            
            // Atualiza subt√≠tulo se n√£o for TODOS
            if(diretoria !== 'TODOS') {
                document.getElementById('subtitulo').innerHTML = `Vis√£o Espec√≠fica: <strong>${label}</strong>`;
            } else {
                document.getElementById('subtitulo').innerText = "Monitoramento de Anomalias e Planos de A√ß√£o";
            }

            // Filtro
            const dadosFiltrados = diretoria === 'TODOS' 
                ? dadosBanco 
                : dadosBanco.filter(d => d.diretoria === diretoria);
            
            atualizarDashboard(dadosFiltrados);
        }

        function atualizarDashboard(dados) {
            // 1. Calcular KPIs
            let total = 0, pendente = 0, atrasado = 0, concluido = 0;
            
            dados.forEach(d => {
                total += d.anomalias;
                // Soma anomalias baseado no status geral da linha
                if(d.status === 'Pendente') pendente += d.anomalias;
                else if(d.status === 'Atrasado') atrasado += d.anomalias;
                else if(d.status === 'Conclu√≠do' || d.status === 'Em Dia') concluido += d.anomalias;
            });

            document.getElementById('kpiTotal').innerText = total;
            document.getElementById('kpiPendente').innerText = pendente;
            document.getElementById('kpiAtrasado').innerText = atrasado;
            document.getElementById('kpiConcluido').innerText = concluido;

            // 2. Renderizar Tabela
            const tbody = document.getElementById('tabelaCorpo');
            tbody.innerHTML = '';
            
            // Ordenar por anomalias (decrescente) para mostrar ofensores primeiro
            const dadosOrdenados = [...dados].sort((a, b) => b.anomalias - a.anomalias);

            dadosOrdenados.forEach(d => {
                let badgeClass = 'bg-pendente';
                if(d.status === 'Em Dia') badgeClass = 'bg-emdia';
                if(d.status === 'Atrasado') badgeClass = 'bg-atrasado';
                if(d.status === 'Conclu√≠do') badgeClass = 'bg-concluido';

                const tr = `
                    <tr>
                        <td><span class="filial-tag">${d.filial}</span></td>
                        <td><span class="responsavel-nome">${d.responsavel}</span></td>
                        <td style="text-align: center; font-weight:bold;">${d.anomalias}</td>
                        <td style="text-align: center;">${d.planos}</td>
                        <td style="text-align: center;"><span class="badge ${badgeClass}">${d.status}</span></td>
                        <td style="color:#7f8c8d; font-size:12px;">${d.diretoria}</td>
                    </tr>
                `;
                tbody.innerHTML += tr;
            });

            // 3. Renderizar Gr√°ficos
            renderizarGraficos(dados);
        }

        function renderizarGraficos(dados) {
            // -- Gr√°fico de Pizza (Status) --
            const statusCounts = { 'Pendente': 0, 'Atrasado': 0, 'Em Dia': 0, 'Conclu√≠do': 0 };
            dados.forEach(d => {
                // Soma a quantidade de anomalias para aquele status
                statusCounts[d.status] = (statusCounts[d.status] || 0) + d.anomalias;
            });

            const ctxStatus = document.getElementById('chartStatus').getContext('2d');
            if(chartStatus) chartStatus.destroy();
            
            chartStatus = new Chart(ctxStatus, {
                type: 'doughnut',
                data: {
                    labels: Object.keys(statusCounts),
                    datasets: [{
                        data: Object.values(statusCounts),
                        backgroundColor: ['#d63031', '#e17055', '#27ae60', '#636e72'],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { position: 'bottom' },
                        title: { display: true, text: 'Distribui√ß√£o do Volume de Anomalias', font: {size: 16} }
                    }
                }
            });

            // -- Gr√°fico de Barras (Top Ofensores) --
            // Pega top 10 respons√°veis com status Pendente ou Atrasado
            const topOffenders = dados
                .filter(d => d.status === 'Pendente' || d.status === 'Atrasado')
                .sort((a, b) => b.anomalias - a.anomalias) // Maior volume primeiro
                .slice(0, 8); // Top 8 para caber no gr√°fico

            const ctxResp = document.getElementById('chartResponsavel').getContext('2d');
            if(chartResponsavel) chartResponsavel.destroy();

            chartResponsavel = new Chart(ctxResp, {
                type: 'bar',
                data: {
                    labels: topOffenders.map(d => d.responsavel.split(' ')[0] + ' (' + d.filial + ')'), // Primeiro nome + Filial
                    datasets: [{
                        label: 'Pend√™ncias/Atrasos',
                        data: topOffenders.map(d => d.anomalias),
                        backgroundColor: '#0984e3',
                        borderRadius: 4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        title: { display: true, text: 'Maiores Ofensores (Pendentes + Atrasados)', font: {size: 16} }
                    },
                    scales: {
                        y: { beginAtZero: true, grid: { borderDash: [2, 4] } },
                        x: { grid: { display: false } }
                    }
                }
            });
        }

        // Inicializa com todos
        aplicarFiltro();

    </script>
